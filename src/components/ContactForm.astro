---
import { SendIcon } from "astro-feather";
import Button from "./Button.astro";
---

<form
  action="https://api.web3forms.com/submit"
  method="POST"
  class="mx-auto max-w-lg flex flex-col gap-4"
>
  <!-- Hidden Web3Forms config -->
  <input
    type="hidden"
    name="subject"
    value="🛎️ Uusi viesti Portfoliosta - jussinevavuori.com"
  />
  <input
    type="hidden"
    name="access_key"
    value="facfab56-acf7-4110-b6b4-d4f482b5ae6b"
  />
  <input
    type="hidden"
    name="redirect"
    value="https://jussinevavuori.com/thank-you"
  />

  <!-- Public Web3Forms fields -->
  <div class="flex flex-col gap-2">
    <label for="input_name" class="text-black/70 text-sm"> Name</label>
    <input
      class="border rounded-lg px-2 py-2"
      id="input_name"
      type="text"
      name="name"
      required
    />
  </div>

  <div class="flex flex-col gap-2">
    <label for="input_email" class="text-black/70 text-sm"> Email</label>
    <input
      class="border rounded-lg px-2 py-2"
      id="input_email"
      type="email"
      name="email"
      required
    />
  </div>

  <div class="flex flex-col gap-2">
    <label for="input_message" class="text-black/70 text-sm"> Message</label>
    <textarea
      class="border rounded-lg px-2 py-2"
      id="input_message"
      rows={10}
      name="message"
      required></textarea>
  </div>

  <!-- Public Captcha -->
  <div class="h-captcha" data-captcha="true"></div>

  <!-- Public Submit -->
  <Button type="submit" class="mt-4" hasEndIcon>
    Send
    <SendIcon />
  </Button>
</form>
